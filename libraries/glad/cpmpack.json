{
  "format_version": "1",
  "packages": [
    {
      "name": "glfw",
      "version": "3.4",
      "github_repository": "glfw/glfw",
      "git_tag": "{VERSION}",
      "options": [
        "GLFW_BUILD_TESTS OFF",
        "GLFW_BUILD_EXAMPLES OFF",
        "GLFW_BUILD_DOCS OFF",
        "GLFW_INSTALL OFF",
        "GLFW_USE_HYBRID_HPG ON",
        "GLFW_BUILD_WAYLAND OFF",
        "GLFW_BUILD_X11 OFF"
      ]
    },
    {
      "name": "glad",
      "version": "0.1.36",
      "github_repository": "Dav1dde/glad",
      "git_tag_ignore": [
        "v2.*"
      ]
    }
  ]
}
